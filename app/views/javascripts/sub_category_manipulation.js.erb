function popUpForAddExpenditureItem(){

	$('#add').unbind('click');
	$('#add').bind('click',addExpenditureItem);
	
	$('#allocation').hide().parent().hide();
	
	$('#date').show().parent().show();
	$('#spent').show().parent().show();  

	//centering with css
	centerPopup();
	//load popup
	loadPopup();
}


function clearPopupForAddExpenditureItem() {
	$('#newItem').val('');
	$('#date').val('');
	$('#spent').val('');
}

