function popUpForAddSubCategory(){
	
	$('#add').unbind('click');
	$('#add').bind('click',addCategory);
	  
	$('#date').hide().parent().hide();
	$('#spent').hide().parent().hide();

	$('#allocation').show().parent().show();
	
