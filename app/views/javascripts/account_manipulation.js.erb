function formatAmountForDisplay(amount){
	if(amount.charAt(0) != '$') {
		amountNumber =  new Number(amount); 
		return 	'$'+amountNumber.toFixed(2);
	}
	return amount;
}

function extractNumericAmountForProcessing(amount){
	if(amount.charAt(0) == '$')
		return amount.substr(1);
	return amount;	
}

